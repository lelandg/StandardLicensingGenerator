<Window x:Class="StandardLicensingGenerator.Views.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Message" 
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        MinWidth="320"
        MaxWidth="640"
        MinHeight="180"
        Background="#F5F5F5"
        ShowInTaskbar="False">
    <Window.Resources>
        <Style x:Key="MessageBoxButton" TargetType="Button">
            <Setter Property="Margin" Value="8,0,0,0" />
            <Setter Property="MinWidth" Value="86" />
            <Setter Property="Height" Value="32" />
            <Setter Property="Padding" Value="8,0" />
            <Setter Property="Background" Value="#2E75B6" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center" 
                                              RecognizesAccessKey="True" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3E85C6" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1E65A6" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CCCCCC" />
                                <Setter Property="Foreground" Value="#888888" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Icon -->
        <Image x:Name="MessageIcon" 
               Grid.Row="0" 
               Grid.RowSpan="2"
               Grid.Column="0" 
               Width="32" 
               Height="32" 
               Margin="0,0,16,0" 
               VerticalAlignment="Top"/>

        <!-- Message Title -->
        <TextBlock x:Name="MessageTitle" 
                   Grid.Row="0" 
                   Grid.Column="1" 
                   FontSize="16" 
                   FontWeight="SemiBold" 
                   TextWrapping="Wrap"
                   Margin="0,0,0,8"/>

        <!-- Message Content -->
        <TextBlock x:Name="MessageText" 
                   Grid.Row="1" 
                   Grid.Column="1" 
                   TextWrapping="Wrap" 
                   VerticalAlignment="Top"
                   Margin="0,0,0,16"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Grid.Column="0" 
                    Grid.ColumnSpan="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button x:Name="YesButton" 
                    Content="_Yes" 
                    Click="YesButton_Click" 
                    Style="{StaticResource MessageBoxButton}"
                    IsDefault="True"
                    Visibility="Collapsed"/>
            <Button x:Name="NoButton" 
                    Content="_No" 
                    Click="NoButton_Click" 
                    Style="{StaticResource MessageBoxButton}"
                    Visibility="Collapsed"/>
            <Button x:Name="OkButton" 
                    Content="_OK" 
                    Click="OkButton_Click" 
                    Style="{StaticResource MessageBoxButton}"
                    IsDefault="True"
                    Visibility="Collapsed"/>
            <Button x:Name="CancelButton" 
                    Content="_Cancel" 
                    Click="CancelButton_Click" 
                    Style="{StaticResource MessageBoxButton}"
                    IsCancel="True"
                    Visibility="Collapsed"/>
        </StackPanel>
    </Grid>
</Window>
